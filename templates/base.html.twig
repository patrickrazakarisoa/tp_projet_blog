<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue
			{% endblock %}
		</title>

		{# Run `composer require symfony/webpack-encore-bundle`and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
			<link rel="stylesheet" href="{{ asset('css/st.css') }} ">
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
	<div class="haut">
		<ul>
		{% if is_granted('ROLE_ADMIN') %}
			<li><a href="{{ path('affichage-article')}}">Acceuil</a></li>
			<li><a href="{{ path('add-article')}}">Ajouter</a></li>
			<li><a href="{{ path('app_logout')}}">Déconnexion</a></li>
		{% elseif is_granted('ROLE_USER') %}
			<li><a href="{{ path('affichage-article')}}">Acceuil</a></li>
			<li><a href="{{ path('app_logout')}}">Déconnexion</a></li>
		{% else %}
			<li><a href="{{ path('affichage-article')}}">Acceuil</a></li>
			<li><a href="{{ path('app_register')}}">Inscription</a></li>
			<li><a href="{{ path('app_login')}}">Connexion</a></li>
		{% endif %}

		</ul>
	</div>
		{% block body %}
	
		{% endblock %}
		<script src="https://kit.fontawesome.com/e4895b9a2a.js"crossorigin="anonymous">
		</script>
	</body>
</html>
